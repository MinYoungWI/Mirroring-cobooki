      // // ['1', '2'] -> checkedProductId
      // const carts = localStorage.getItem('cart');
      // const updateCarts = carts.filter(cart => !checkedProductId.includes(cart.id));
      // localStorage.setItem('cart', updateCarts);
      // // render~

      //체크박스
      const checkboxes = document.querySelectorAll('input[type="checkbox"]');

      // 체크된 UI 삭제
      function deleteCheckedItems() {
        let arr = [];
        arr = document.querySelectorAll("#delete-row");
        for (let i = 1; i < checkboxes.length; i++) {
          if (checkboxes[i].checked) {
            arr[i - 1].remove();
          }
        }
        // 체크된 로컬스토리지 데이터 삭제
        for (let i = 1; i < checkboxes.length; i++) {
          if (checkboxes[i].checked) {
            const keyName = localStorage.key(i - 1);
            localStorage.removeItem(keyName);
          }
        }
      }

      // //basket객체 리터럴
      let basket = {
        totalCount: 0, //전체 갯수 변수
        totalPrice: 0, //전체 합계액 변수
        //재계산
        reCalc: function () {
          this.totalCount = 0;
          this.totalPrice = 0;

          document.querySelectorAll('input[type="number"]').forEach((item) => {
            let count = parseInt(item.value);
            this.totalCount += count;

            let price = parseInt(
              item.parentElement.nextElementSibling.firstElementChild.getAttribute(
                "value"
              )
            );
            this.totalPrice += count * price;
          }, this); //forEach 2번째 파라미터로 객체를 넘겨서 this가 객체 리터럴을 가리키도록 함.
        },
      };
    </script>
  </body>
</html>
