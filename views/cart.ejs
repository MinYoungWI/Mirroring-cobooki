    <script type="text/javascript">
      $(document).ready(function () {
        $("#cbx_chkAll").click(function () {
          if ($("#cbx_chkAll").is(":checked"))
            $("input[name=chk]").prop("checked", true);
          else $("input[name=chk]").prop("checked", false);
        });

        $("input[name=chk]").click(function () {
          var total = $("input[name=chk]").length;
          var checked = $("input[name=chk]:checked").length;

          if (total != checked) $("#cbx_chkAll").prop("checked", false);
          else $("#cbx_chkAll").prop("checked", true);
        });
      });
    </script>
  </head>
  <%- include("header.ejs") %>

  <body>
    <!-- header, footer 빼고 wrap -->
    <div class="cart-wrap">
      <!-- 주문 진행 순서 -->
      <div class="bgc-gray">
        <!-- 상품내역 wrap-->
        <div class="product-table">
          <div class="order-progress">
            <p>장바구니</p>
          </div>
          <!-- 상품내역 상세 표 -->
          <!-- 누르면 전체 체크 -->
          <div class="X-delete row-all">
            <hr />
            <div class="check-box">
              <input
                id="cbx_chkAll"
                type="checkbox"
                value="selectAll"
                name="check-box"
                onclick="selectAll(this)"
              />
            </div>
            <div class="one table">
              <p>상품명</p>
            </div>
            <div class="two table">
              <p>판매가</p>
            </div>
            <div class="three table">
              <p>수량</p>
            </div>
            <div class="four table">
              <p>결제금액</p>
            </div>
          </div>
          <!-- 사용자가 담은 목록 -->
          <div class="row row-all"></div>
          <div class="price-wrap">
            <p class="right order-price">총 주문금액 + 총 배송비 3,000원 =</p>
            <p class="right final-price">총 결제금액 :</p>
          </div>
        </div>
        <!-- 선택 상품 삭제하기 누르면 제품 삭제 -->
        <div class="button-wrap">
          <button class="right delete-button" onclick="deleteCheckedItems()">
            선택 상품 삭제하기
          </button>
          <!-- 선택 상품 주문하기 누르면 주문 페이지로 이동 -->
          <button onclick="location.href='/orders'" class="right" onclick="">
            선택 상품 주문하기
          </button>
        </div>
      </div>
    </div>
    <!-- 네비바 -->
    <nav>
      <div class="myProfileNav">
        <div class="myPage">마이페이지</div>
        <h1></h1>
        <ul class="list">
          <li>
            <a href="/myprofile/orders" class="order">주문 내역</a>
          </li>
          <li>
            <a href="/myprofile" class="myInfo">개인 정보 수정</a>
          </li>
          <li>
            <a href="/carts" class="cart">장바구니</a>
          </li>
        </ul>
      </div>
    </nav>
    <%- include('./footer.ejs') %>
    <script>
      //로컬스토리지에 담긴 데이터 꺼내기
      //append 할 태그 식별하기
      const row = document.querySelector(".row");

      for (const key in localStorage) {
        const value = JSON.parse(localStorage.getItem(key));
        if (value) {
          //element 생성
          const el = row.insertAdjacentHTML(
            "beforeend",
            `
              <div id="delete-row">
                <hr />
            <div class="check-box">
              <input type="checkbox" id="book-name" name="chk">
            </div>
            <div class="product-name one">
              <div class="img">
                <!-- 이미지도 변수 -->
                <img src="https://image.aladin.co.kr/product/29281/57/cover200/k382837902_1.jpg" alt="책 임시 이미지">
              </div>
              <!-- 책이름 변수 -->
              <label for="book-name">${value[0]}</label>
            </div>
            <div class="price two">
              <!-- 가격 변수 -->
              <p>${value[1]}원</p>
            </div>
            <form class="purchase-count three" action="/cart" name="purchase-amount" method="post">
              <input type="number" min="1" name="number" value="${
                value[2]
              }" onchange="changeValue" required>
              
            </form>
            <div class="book-price four">
              <!-- 책 가격 변수 -->
              <p>${value[1] * value[2]}원</p>
            </div>
          </div>
          </div>
            `
          );
          //총 주문 가격 텍스트 수정하기
          const orderPriceText = document.querySelector(".order-price");
          const finalPriceText = document.querySelector(".final-price");
          orderPriceText.textContent = `총 주문금액 ${
            value[1] * value[2]
          }+ 총 배송비 3,000원 =`;
          finalPriceText.textContent = `총 결제금액 : ${
            value[1] * value[2] + 3000
          }`;
        }
      }

      // //코치님 참고 코드
