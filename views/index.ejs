                  <div class="book-container">
                    <div class="book-img"></div>
                    <div class="book-info">
                      <div class="book__name">이름</div>
                      <div class="book__author">저자</div>
                      <div class="book__price">가격</div> 
                    </div>
                  </div>
                </div>
              <% } %>
